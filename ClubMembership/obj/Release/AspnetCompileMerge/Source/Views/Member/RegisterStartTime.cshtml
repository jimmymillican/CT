@model ClubMembership.Models.Member
@{
    ViewBag.Title = "Register Start Time";
}
<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Member</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DisplayFor(model => model.LastName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new {@class = "control-label col-md-2"})
            @Html.DisplayFor(model => model.FirstName)
        </div>
       


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="buttonStyle" onclick="location.href = '@Url.Action("Index", "Member", new { topCondition = true, type = "RecordStartDate" })'">Record Start Time</button>
                <button type="button" class="buttonStyle" onclick="location.href = '@Url.Action("Index", "Member", new { topCondition = true, type = "RecordStartDate" })'">Record End Time</button>

                @Html.ActionLink("reg", "RegisterStartTimeSubmit", new { id = Model.Id })
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
